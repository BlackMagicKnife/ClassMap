<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jay.fragmentdemo">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name="com.example.chenhz.classroommap.MainActivity"
            android:label="MainActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" />
        <activity
            android:name="com.example.chenhz.classroommap.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name="com.example.chenhz.classroommap.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name="com.example.chenhz.classroommap.ModifyPassword"
            android:label="@string/title_activity_modify_password"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" />
        <activity
            android:name="com.example.chenhz.classroommap.StartActivity"
            android:label="@string/title_activity_start"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chenhz.classroommap.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" />
        <activity
            android:name="com.example.chenhz.classroommap.suggestion"
            android:label="@string/title_activity_suggestion"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" />
    </application>

</manifest>
